package com.mycompany.mavenproject12;
import java.util.Scanner;
public class Mavenproject12 {

    public static void main(String[] args) {
        Scanner in=new Scanner (System.in);
        double capital,tdi,time,interes,monto;
        System.out.println("Ingrese el Capital: ");
        capital=in.nextDouble();
        System.out.println("Ingrese la Tasa de Interes: ");
        tdi=in.nextDouble();
        System.out.println("Ingrese el Tiempo: ");
        time=in.nextDouble();
        monto=capital*(Math.pow((1+tdi/100),time));
        interes=monto-capital;
        System.out.println("El interes es: "+interes);
        System.out.println("El monto es: "+monto);
    }
}
